<h1 id="title">Eat Your Feels!</h1>
<div class="container-fluid" id="big-box">
  <div class="row align-row">
    <div class="container-fluid md-4 sm-12" id="box" id="up">
      <h4>Your Feels!</h4>
      <ul>
        {{#each feels}}
        {{#unless downs}}
        {{> feels/feel-block down=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="container-fluid md-4 sm-12" id="box">
      <h4 style="text-align:center;">Add a Feel</h4>
      <br>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">What are you feeling?:</label>
          <input type="text" id="fe" name="name">
        </div>

        <div class="form-group">
          <label for="downs">Are you ready to deal with this problem or cast it into a lake of procrastination?</label><br>
          <input type="radio" name="downs" value="1" checked>Postpone Development<br>
          <input type="radio" name="downs" value="0">Attempt Personal Growth
        </div>
        <button type="submit" style="float:none; background-color:rgb(230, 208, 86)">Add Feel</button>
      </form>
    </div>
    <div class="container-fluid md-4 sm-12" id="box" id="down">
      <h4>Feels pushed way, way down!</h4>
      <ul>
        {{#each feels}}
        {{#if downs}}
        {{> feels/feel-block down=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>